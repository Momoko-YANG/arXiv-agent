# arXiv Agent 配置文件
# 复制为 config.yaml 后按需修改
# cp config.yaml.template config.yaml

# 关注的 arXiv 分类
# 完整列表: https://arxiv.org/category_taxonomy
categories:
  - cs.AI      # Artificial Intelligence
  - cs.LG      # Machine Learning
  - cs.CV      # Computer Vision
  - cs.CL      # Computation and Language (NLP)

# 抓取设置
scraping:
  days: 1                 # 抓取最近几天的论文
  max_results: 200        # 每次最大抓取数量
  schedule_time: "09:00"  # 每天执行时间

# 数据库设置
database:
  path: "arxiv_papers.db"

# Telegram 推送（主要通知方式）
# Token 和 Chat ID 建议写在 .env 文件里，不要写在这里
telegram:
  enabled: true
  # bot_token: ""   # 优先读 .env 中的 TELEGRAM_BOT_TOKEN
  # chat_id: ""     # 优先读 .env 中的 TELEGRAM_CHAT_ID
  top_n: 10          # 消息中展示前 N 篇论文
  send_report_file: true  # 是否同时发送完整报告文件

# 过滤关键词（可选，基础版使用）
keywords:
  enabled: false
  terms:
    - "transformer"
    - "diffusion"
    - "reinforcement learning"
    - "large language model"

# 输出设置
output:
  markdown: true
  markdown_path: "./"
